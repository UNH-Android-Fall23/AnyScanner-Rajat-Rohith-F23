<!-- fragment_wifi_details.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wifiSSIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wi-Fi SSID: "
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/wifiSecurityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wi-Fi Security: "
        android:layout_below="@id/wifiSSIDTextView"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/wifiDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiSecurityTextView"
        android:layout_centerInParent="true"
        android:text="sdasd"
        android:layout_margin="10dp"
        />

    <!-- Other views go here -->

</RelativeLayout>